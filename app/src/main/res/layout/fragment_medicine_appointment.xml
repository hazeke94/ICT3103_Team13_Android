<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.medicineAppointment.medicineAppointmentFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="medicineAppointment" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/textMedicine"
        android:id="@+id/recyclerViewMedicalAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textViewNoMedicineAppt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_appointment"
        android:textSize="@dimen/font_1"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_below="@+id/recyclerViewMedicalAppointment"/>

    <Button
        android:id="@+id/btnAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_edit"
        />

</RelativeLayout>